generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Users {
  id  String  @id  @default(uuid())
  firstName String
  lastName String
  email String 
  phonneNumber String?
  photoUrl String?
  posts Posts[]
  like Like[]
  comments Comments[]
}
model Posts {
  id  String  @id  @default(uuid())
  title String
  content String
  createBy Users @relation(fields: [userId], references: [id])
  userId String
  comments Comments[]
  like Like[]
}
// Pour les autres elements
model Like {
  id  String  @id  @default(uuid())
  title String
  createBy Users @relation(fields: [userId], references: [id])
  userId String
  post Posts  @relation(fields: [postId], references: [id])
  postId String
}
model Comments{
  id String @id @default(uuid())
  content String
  createBy Users @relation(fields: [userId], references: [id])
  userId String
  post Posts  @relation(fields: [postId], references: [id])
  postId String
}